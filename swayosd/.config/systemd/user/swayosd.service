[Unit]
Description=SwayOSD server for on-screen display notifications
Documentation=https://github.com/ErikReider/SwayOSD
PartOf=graphical-session.target
After=hyprland-session.target sway-session.target

[Service]
Type=simple
ExecStart=/usr/bin/swayosd-server
Restart=on-failure
RestartSec=3

[Install]
WantedBy=graphical-session.target

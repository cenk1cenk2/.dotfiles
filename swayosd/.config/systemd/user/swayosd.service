[Unit]
Description=SwayOSD server for on-screen display notifications
Documentation=https://github.com/ErikReider/SwayOSD
PartOf=graphical-session.target
After=graphical-session.target

[Service]
Type=simple
ExecCondition=/bin/sh -c 'command -v swayosd-server'
ExecStart=swayosd-server
Restart=on-failure
RestartSec=3
# Logging
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=graphical-session.target

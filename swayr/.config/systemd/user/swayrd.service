[Unit]
Description=Swayrd - Swayr daemon for window switching
Documentation=https://sr.ht/~tsdh/swayr/
PartOf=sway-session.target
After=sway-session.target

[Service]
Type=simple
ExecCondition=/bin/sh -c 'command -v swayrd'
ExecStart=swayrd
Restart=on-failure
RestartSec=3
# Logging
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=sway-session.target

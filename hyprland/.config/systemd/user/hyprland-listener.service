[Unit]
Description=Hyprland IPC event listener
PartOf=graphical-session.target
After=graphical-session.target

[Service]
Type=simple
ExecCondition=/bin/sh -c '[ -n "$HYPRLAND_INSTANCE_SIGNATURE" ]'
ExecStart=%h/.config/hypr/scripts/hyprland-listener.py
Restart=on-failure
RestartSec=3
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=graphical-session.target

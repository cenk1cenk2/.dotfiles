# some global theme specific variables
set $gtk-theme Abrus-solid-dark
set $icon-theme Qogir-dark
set $cursor-theme xcursor-breeze
set $gui-font Segoe UI 11
set $term-font Consolas 12.5
set $kvantum-theme Matchama-Dark-Aliz

# a theme specific color map
set $color0 #14161b
set $color1 #282a2b
set $color2 #00758C
set $color3 #41535B
set $color4  #43a5d5
set $color5  #d6d6d6
set $color6  #eeeeee
set $color7  #ffffff
set $color8  #e06c75
set $color9  #d19a66
set $color10 #e6cd69
set $color11 #98c379
set $color12 #16a085
set $color13 #4b5263
set $color14 #a074c4
set $color15 #8a553f

set $transparent-background-color rgba(20, 22, 27, 0.9)
set $background-color #121212
set $text-color #eeeeee
#color1
set $selection-color #282a2b
#color12
set $accent-color #623CEA
set $theme_template_script "s/GTK_THEME/$gtk-theme/g; s/ICON_THEME/$icon-theme/g; s/CURSOR_THEME/$cursor-theme/g; s/GUI_FONT/$gui-font/g; s/KVANTUM_THEME/$kvantum-theme/g; s/BACKGROUND_COLOR/$base00/g; s/ACCENT_COLOR/$base0D/g; s/TEXT_COLOR/$base06/g; s/TERM_FONT/$term-font/g;"

# Basic color configuration using the Base16 variables for windows and borders.
# Property Name         Border  BG      Text    Indicator Child Border
client.focused          $color5 $color4 $color0 $color4 $color4
client.focused_inactive $color1 $color1 $color5 $color3 $color1
client.unfocused        $color1 $color0 $color5 $color1 $color1
client.urgent           $color8 $color8 $color0 $color8 $color8
client.placeholder      $color0 $color0 $color5 $color0 $color0
client.background       $color7

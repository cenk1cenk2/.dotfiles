set $color15 #abb2bf
set $color16 #ececec

set $transparent-background-color rgba(20, 22, 27, 0.9)
set $background-color #1e2127
set $text-color #eeeeee
#color1
set $selection-color #282a2b
#color12
set $accent-color #61afef
set $theme_template_script "s/GTK_THEME/$gtk-theme/g; s/ICON_THEME/$icon-theme/g; s/CURSOR_THEME/$cursor-theme/g; s/GUI_FONT/$gui-font/g; s/KVANTUM_THEME/$kvantum-theme/g; s/BACKGROUND_COLOR/$base00/g; s/ACCENT_COLOR/$base0D/g; s/TEXT_COLOR/$base06/g; s/TERM_FONT/$term-font/g;"

# Basic color configuration using the Base16 variables for windows and borders.
# Property Name         Border  BG      Text    Indicator Child Border
client.focused          $color5 $color4 $color0 $color4 $color4
client.focused_inactive $color1 $color1 $color15 $color3 $color1
client.unfocused        $color1 $color0 $color7 $color1 $color1
client.urgent           $color8 $color8 $color0 $color8 $color8
client.placeholder      $color0 $color0 $color5 $color0 $color0

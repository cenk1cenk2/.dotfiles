# vim:ft=swayconfig

### Recording Mode

set $mode_recording "ðŸŽ¥ Recording: (r) toggle | (p) pause | (o) open OBS | (q) stop | (s) speechâ†’clipboard | (S) speechâ†’type | (Q) kill speech | ESC exit"

mode $mode_recording {
        # Toggle recording (start/stop)
        bindsym r exec $recorder toggle, mode "default"

        # Toggle pause/resume
        bindsym p exec $recorder pause, mode "default"

        # Open OBS window
        bindsym o exec $recorder open, mode "default"

        # Stop recording
        bindsym q exec $recorder stop, mode "default"

        # Speech-to-text to clipboard (wl-copy)
        bindsym s exec $speech toggle clipboard, mode "default"

        # Speech-to-text direct typing (ydotool)
        bindsym Shift+s exec $speech toggle type, mode "default"

        # Terminate waystt
        bindsym Shift+q exec $speech kill, mode "default"

        # Exit recording mode
        bindsym Escape mode "default"
}

## Launch // Recording Mode ##
bindsym $mod+Shift+r mode $mode_recording

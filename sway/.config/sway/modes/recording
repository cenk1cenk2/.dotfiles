# vim:ft=swayconfig

### Recording Mode

set $mode_recording "ðŸŽ¥ Recording: (r) toggle | (p) pause | (o) open OBS | (q) stop | (s/S) speechâ†’type | (c/C) speechâ†’clipboard | (Q) kill speech | ESC exit"

mode $mode_recording {
        # Toggle recording (start/stop)
        bindsym r exec $recorder toggle, mode "default"

        # Toggle pause/resume
        bindsym p exec $recorder pause, mode "default"

        # Open OBS window
        bindsym o exec $recorder open, mode "default"

        # Stop recording
        bindsym q exec $recorder stop, mode "default"

        # Speech-to-text direct typing (ydotool)
        bindsym s exec $speech toggle type, mode "default"

        # Speech-to-text direct typing with AI cleanup
        bindsym Shift+s exec $speech toggle type --ai, mode "default"

        # Speech-to-text to clipboard (wl-copy)
        bindsym c exec $speech toggle clipboard, mode "default"

        # Speech-to-text to clipboard with AI cleanup
        bindsym Shift+c exec $speech toggle clipboard --ai, mode "default"

        # Terminate waystt
        bindsym Shift+q exec $speech kill, mode "default"

        # Exit recording mode
        bindsym Escape mode "default"
}

## Launch // Recording Mode ##
bindsym $mod+Shift+r mode $mode_recording
